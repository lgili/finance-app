<div class="min-h-screen flex items-center justify-center bg-background px-4 py-12">
  <div class="max-w-md w-full bg-white dark:bg-gray-800 p-8 rounded shadow">
    <h2 class="text-center text-2xl font-extrabold text-primary mb-6">
      Configuração Inicial
    </h2>

    <%= form_with(model: @preference, url: setup_path, method: :put, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :theme, "Tema", class: "block text-sm font-medium text-primary" %>
        <%= f.select :theme, [['Claro', 'light'], ['Escuro', 'dark']], {}, class: "w-full p-2 border rounded bg-background text-primary" %>
      </div>

      <div>
        <%= f.label :currency, "Moeda", class: "block text-sm font-medium text-primary" %>
        <%= f.select :currency, [['Real (BRL)', 'BRL'], ['Dólar (USD)', 'USD'], ['Euro (EUR)', 'EUR']], {}, class: "w-full p-2 border rounded bg-background text-primary" %>
      </div>

      <div>
        <%= f.submit "Salvar Configurações", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full" %>
      </div>
    <% end %>
  </div>
</div>
