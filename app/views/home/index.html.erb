<div class="flex flex-col items-center justify-center min-h-screen bg-background">
  <div class="bg-white dark:bg-gray-800 p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold text-center mb-6 text-primary">Bem-vindo ao Finance App</h1>
    <% if user_signed_in? %>
      <div class="text-center mb-4">Olá, <%= current_user.email %>!</div>
      <div class="flex flex-col space-y-4">
        <%= link_to 'Minhas Transações', transactions_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% else %>
      <div class="flex flex-col space-y-4">
        <%= link_to 'Login', new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to 'Criar Conta', new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
